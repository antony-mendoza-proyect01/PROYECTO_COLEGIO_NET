@model PROYECTO_FINAL.Models.Foro

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center" style="margin-top:30px">
    <div class="col-sm-12">

        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4 class="text-center">Editar Foro</h4>
            </div>
            <div class="panel-body">
                <form action="@Url.Action("Editar","Foro")" method="post">
                    <input type="hidden" class="form-control" name="IdForo"  value="@Html.DisplayTextFor(m=>m.IdForo)" />
                    <div class=" form-group text-center mx-auto">
                        <label for="txtnombre">Titulo</label>
                        <input type="text" class="form-control mx-auto" name="Titulo" value="@Html.DisplayTextFor(m=>m.Titulo)" />
                    </div>
                    <div class="form-group text-center mx-auto">
                        <label for="txtnombre">Comentario</label>
                        <input type="text" row="3" class="form-control mx-auto" name="Comentario" value="@Html.DisplayTextFor(m=>m.Comentario)" />
                    </div>
                    <br />
                    <div class="text-center">
                        <button type="submit" class="btn btn-warning">Editar</button>
                        <a class="btn btn-danger" href="@Url.Action("Foro","Foro")">Volver</a>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>
</div>

